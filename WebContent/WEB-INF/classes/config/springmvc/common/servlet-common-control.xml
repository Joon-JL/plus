<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	
	<!-- 공통코드 조회 -->
	<bean id="common.clmsComControl"
		class="com.sec.common.clmscom.control.CLMSCommonController" parent="secfw.commonControl">
		<property name="clmsComService"     ref="common.clmsComService" />
		<property name="propertyService"    ref="secfw.propertyService" />
		<property name="methodNameResolver" ref="paramResolver" />
		<property name="localeResolver"     ref="localeResolver" />
		<property name="messageSource"      ref="messageSource" />
		<property name="esbOrgService"      ref="secfw.esbOrgService" />
	</bean>
		
	<!-- 공통 : 파일첨부 -->
	<bean id="common.clmsFileControl"
		class="com.sec.common.clmsfile.control.ClmsFileController" parent="secfw.commonControl">
		<property name="clmsFileService" ref="common.clmsFileService" />
	</bean>
	
	
	<!-- mySingle Approval Test by Joon :2015.03.11 -->
	<bean id="common.mySingleApprovalTestControl" class="com.sds.secframework.singleIF.control.EsbApprovalTestController" parent="secfw.commonControl">
		<property name="signManageService" ref="clm.SignManageService"/>
		<property name="esbApprovalService" ref="secfw.esbApprovalService" />
		<property name="esbOrgService"      ref="secfw.esbOrgService" />
		<property name="comUtilService"     ref="secfw.comUtilService" />
	</bean>

</beans>
