				<prop key="/clm/draft/customerTest.do">clm.customerTestControl</prop>
				<prop key="/clm/manage/myContractPop.do">clm.myContractControl</prop>               <!-- 연관계약선택팝업 -->
				<prop key="/isalive.do">isaliveControl</prop>										<!-- EYEON -->
