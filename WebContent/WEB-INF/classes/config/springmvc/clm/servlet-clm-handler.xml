				<!--  <prop key="/clm/manage/myApprival.do">clm.myApprival</prop>myApproval 목록 -->
				<!--  <prop key="/clm/manage/contractCnt.do">clm.contractCnt</prop>계약검퇴의뢰시 계약 개수 -->				
				<!-- 프로타입 테스트 : 2011.09.19 신승완 작성-->
				<prop key="/clm/manage/prototypeTest.do">clm.prototypeTest</prop>
				<!-- <prop key="/clm/manage/execution.do">clm.executionControl</prop>					이행  작성자 : 신승완 2011.09.05	
				<prop key="/clm/manage/completion.do">clm.completionControl</prop>					종료  작성자 : 신승완 2011.09.30 -->
				
				<prop key="/clm/pageReload.do">clm.pageReload</prop> <!-- 페이지 리로드용url -->
