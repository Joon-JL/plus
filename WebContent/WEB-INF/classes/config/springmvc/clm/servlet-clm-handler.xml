	<!-- 검색용 Handler -->
	<bean id="clm.searchHandlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="1"/>
		<property name="interceptors">
			<list>
				<ref bean="secfw.clmsInterceptor"/>
				<ref bean="secfw.menuInterceptor" />			
			</list>
		</property>
		<property name="alwaysUseFullPath" value="true"/>
		<property name="mappings">
			<props>
				<!-- 검색엔진 -->
				<prop key="/clm/search/search.do">clm.searchControl</prop>									
			</props>
		</property>
	</bean>
	
