	<!-- 부서데이타 LOAD -->  
	<bean id="secfw.dataIF.loadOrgCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="secfw.dataIF.loadOrgJobDetail" />        
        <property name="cronExpression" value="0 0 * * * ?" />
    </bean>

    <bean id="secfw.dataIF.loadOrgJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="secfw.dataIF.DataLoadServiceImpl" />
		<property name="targetMethod" value="loadOrgData" />
		<property name="concurrent" value="false" />
	</bean>

	<bean id="secfw.dataIF.DataLoadServiceImpl" class="com.sds.secframework.dataIF.service.impl.DataLoadServiceImpl">
		<property name="commonDAO" ref="secfw.commonDAO" />
		<property name="propertyService" ref="secfw.propertyService" />
	</bean>
	<!-- //부서데이타 LOAD --> 

	<!-- ESB부서정보 획득(새벽 2시) -->  
	<bean id="secfw.dataIF.loadESBOrgCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="secfw.dataIF.loadESBOrgJobDetail" />        
        <property name="cronExpression" value="0 0 2 * * ?" />
    </bean>

    <bean id="secfw.dataIF.loadESBOrgJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="secfw.esbOrgService" />
		<property name="targetMethod" value="loadESBOrgData" />
		<property name="concurrent" value="false" />
	</bean>
