        <property name="jobDetail" ref="secfw.singleIF.getStatusBatchDetail" />        
        <property name="cronExpression" value="0 0/3 * * * ?" /> 
    </bean>

    <bean id="secfw.singleIF.getStatusBatchDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="secfw.esbApprovalJob" />
