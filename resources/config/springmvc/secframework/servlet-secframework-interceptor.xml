<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Interceptor -->

	<!-- 공통(세션, 로그인, 시스템 체크) -->
	<bean id="secfw.clmsInterceptor" class="com.sds.secframework.common.interceptor.ClmsInterceptor">
		<property name="commonDAO" ref="secfw.commonDAO" />
		<property name="messageSource"   ref="messageSource" />
		<property name="propertyService" ref="secfw.propertyService" />		
	</bean>
	<!-- 사용로그, 페이지네비게이션 -->
	<bean id="secfw.menuInterceptor" class="com.sds.secframework.common.interceptor.MenuInterceptor">
		<property name="commonDAO" ref="secfw.commonDAO" />
		<property name="userService" ref="secfw.userService" />
		<property name="propertyService" ref="secfw.propertyService" />
		<property name="localeResolver" ref="localeResolver" />
	</bean>
	<!-- 권한체크 -->
	<bean id="secfw.authCheckInterceptor" class="com.sds.secframework.common.interceptor.AuthCheckInterceptor">
		<property name="commonDAO" ref="secfw.commonDAO" />
		<property name="propertyService" ref="secfw.propertyService" />
		<property name="messageSource"   ref="messageSource" />
		<property name="localeResolver"  ref="localeResolver" />
	</bean>
	
	<!-- 권한체크 -->
	<bean id="secfw.classMethodAuthInterceptor" class="com.sds.secframework.common.interceptor.ClassMethodAuthInterceptor">
		<property name="commonDAO" ref="secfw.commonDAO" />
		<property name="propertyService" ref="secfw.propertyService" />
		<property name="messageSource"   ref="messageSource" />
		<property name="classMethodAuthService" ref="secfw.classMethodAuthService"/>
		<property name="menuService"        ref="secfw.menuService" />
	</bean>
	
	<!-- 권한체크 -->
	<bean id="secfw.AuthInterceptor" class="com.sds.secframework.common.interceptor.AuthInterceptor">
		<property name="commonDAO" ref="secfw.commonDAO" />
		<property name="propertyService" ref="secfw.propertyService" />
		<property name="messageSource"   ref="messageSource" />
	</bean>
	
	<!-- ################################################################ -->
	<!-- ###### 게시판 에러(개발보류함)										  -->
	<!-- ################################################################ -->	
	<!-- 게시판 권한 체크 -->
	<bean id="secfw.boardAuthCheckInterceptor" class="com.sds.secframework.common.interceptor.BoardAuthCheckInterceptor">
		<property name="commonDAO" ref="secfw.commonDAO" />
		<property name="propertyService" ref="secfw.propertyService" />
		<property name="messageSource"   ref="messageSource" />
		<property name="localeResolver"  ref="localeResolver" />
	</bean>
		
</beans>
