<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- Oracle DataSource 설정 -->
    <bean id="secfw.dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${secfw.db.common.driverClassName}"/>
        <property name="url" value="${secfw.db.common.url}"/>
        <property name="username" value="${secfw.db.common.username}"/>
        <property name="password" value="${secfw.db.common.password}"/>
        <property name="defaultAutoCommit" value="false"/>
    </bean>

